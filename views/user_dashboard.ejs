<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizVerse</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container1">
        <h1 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Welcome to QuizVerse</h1>
        <div class="container2">
            <h1 style="color: #007bff;">Quiz Setup</h1>
            <form method="post" action="/quiz">
                <label for="quiz-category">Category:</label>
                <br>
                <select name="quizCategory" id="quiz-category">
                    <option value="science">Science</option>
                    <option value="ai">AI</option>
                    <option value="sports">Sports</option>
                </select>
                <br>
                <label for="quizNoq">Number Of Questions:</label>
                <br>
                <select name="quizNoq" id="quiz-noq">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                </select>
                <br>
                <label for="quizTimer">Seconds Per Question:</label>
                <br>
                <select name="quizTimer" id="quiz-timer">
                    <option value="10">10s</option>
                    <option value="5">5s</option>
                    <option value="2">2s</option>
                </select>
                <br>
                <button type="submit">Proceed</button>
            </form>
        </div>
    </div>
    <% if (locals.alertMessage) { %>
        <script>
          alert("<%= alertMessage %>");
        </script>
    <% } %>
</body>
</html>